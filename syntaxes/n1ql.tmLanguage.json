{
    "scopeName": "source.sql.n1ql",
    "patterns": [{
        "include": "#comment"
    }, {
        "include": "#n1ql-stmt"
    }],
    "repository": {
        "n1ql-stmt": {
            "patterns": [{
                "include": "#select-stmt"
            }]
        },
        "select-stmt": {
            "patterns": [{
                "include": "#select-stmt-select"
            }, {
                "include": "#select-stmt-values"
            }]
        },
        "with-clause-as": {
            "begin": "(?i)\\b(as)\\b\\s*",
            "end": "(?<=\\))",
            "name": "meta.other.cte-as.sql.n1ql",
            "beginCaptures": {
                "1": {
                    "name": "keyword.other.sql.n1ql"
                }
            },
            "endCaptures": {},
            "patterns": [{
                "begin": "\\(",
                "end": "\\)",
                "name": "meta.cte-select-stmt.sql.n1ql",
                "beginCaptures": {},
                "endCaptures": {}
            }]
        },
        "common-table-expression": {
            "patterns": [{
                "include": "#with-clause-as"
            }, {
                "include": "#name"
            }, {
                "begin": "\\(",
                "end": "\\)",
                "beginCaptures": {},
                "endCaptures": {},
                "patterns": [{
                    "include": "#name"
                }]
            }]
        },
        "select-stmt-select": {
            "begin": "(?i)\\b(select)\\b\\s*",
            "end": "(?=;)",
            "name": "meta.statement.select.sql.n1ql",
            "beginCaptures": {
                "1": {
                    "name": "keyword.other.DML.sql.n1ql"
                }
            },
            "patterns": [{
                "include": "#expr"
            }]
        },
        "select-stmt-values": {
            "begin": "(?i)\\b(values)\\s*",
            "end": "(?=;)",
            "name": "meta.statement.values.sql.n1ql",
            "beginCaptures": {
                "1": {
                    "name": "keyword.other.DML.sql.n1ql"
                }
            },
            "patterns": [{
                "include": "#rowvalue"
            }]
        },
        "rowvalue": {
            "begin": "\\(",
            "end": "\\)",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.section.rowvalue.values.begin"
                }
            },
            "endCaptures": {
                "0": {
                    "name": "punctuation.section.rowvalue.values.end"
                }
            },
            "name": "meta.rowvalue.sql.n1ql",
            "patterns": [{
                "include": "#expr"
            }, {
                "match": ",",
                "name": "punctuation.separator.rowvalue"
            }]
        },
        "expr": {
            "patterns": [{
                "include": "#comment"
            }, {
                "include": "#keyword"
            }, {
                "include": "#expr-parens"
            }, {
                "include": "#function"
            }, {
                "include": "#literal-value"
            }, {
                "include": "#name"
            }]
        },
        "expr-parens": {
            "begin": "\\(",
            "end": "\\)",
            "name": "meta.parens",
            "patterns": [{
                "include": "#keyword"
            }, {
                "include": "#expr-parens"
            }, {
                "include": "#function"
            }, {
                "include": "#literal-value"
            }, {
                "include": "#name"
            }]
        },
        "literal-value": {
            "patterns": [{
                "match": "(?i)\\b(null|true|false|missing)\\b",
                "name": "constant.language.sql.n1ql"
            }, {
                "include": "#numeric-literal"
            }, {
                "include": "#string-literal"
            }]
        },
        "function": {
            "begin": "\\b([A-Za-z]\\w+)\\b\\s*(\\()",
            "end": "\\)",
            "name": "meta.function-call.sql.n1ql",
            "beginCaptures": {
                "1": {
                    "name": "entity.name.function.sql.n1ql"
                }
            },
            "patterns": [{
                "include": "#expr"
            }]
        },
        "keyword": {
            "match": "(?i)\\b(and|as|asc|begin|between|by|case|collate|cross|desc|distinct|else|end|exists|from|group|having|in|inner|is|join|key|left|like|limit|not|null|offset|on|or|order|outer|range|select|when|where|with)\\b",
            "name": "keyword.other.sql.n1ql"
        },
        "name": {
            "patterns": [{
                "include": "#doublequoted-name"
            }, {
                "include": "#backquoted-name"
            }, {
                "include": "#bare-name"
            }]
        },
        "bare-name": {
            "match": "\\b(?i)(?!and\\b|as\\b|asc\\b|begin\\b|between\\b|by\\b|case\\b|collate\\b|cross\\b|desc\\b|distinct\\b|else\\b|end\\b|exists\\b|from\\b|group\\b|having\\b|in\\b|inner\\b|is\\b|join\\b|key\\b|left\\b|like\\b|limit\\b|not\\b|null\\b|offset\\b|on\\b|or\\b|order\\b|outer\\b|range\\b|select\\b|when\\b|where\\b|with\\b)\\w+\\b",
            "name": "variable.other.bare"
        },
        "doublequoted-name": {
            "begin": "\"",
            "end": "\"(?!\")",
            "name": "variable.other.quoted.double",
            "patterns": [{
                "match": "\"\"",
                "name": "constant.character.escape.doublequote.sql.n1ql"
            }]
        },
        "backquoted-name": {
            "begin": "`",
            "end": "`(?!`)",
            "name": "variable.other.quoted.other",
            "patterns": [{
                "match": "``",
                "name": "constant.character.escape.backquote.sql.n1ql"
            }]
        },
        "numeric-literal": {
            "match": "(?i)(?<![\\w\\.])((\\d+(\\.\\d*)?|\\.\\d+)(e[-+]?\\d+)?|0x[\\da-f]+)\\b",
            "name": "constant.numeric.sql.n1ql"
        },
        "string-literal": {
            "begin": "'",
            "end": "'(?!')",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.definition.string.begin.sql.n1ql"
                }
            },
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.string.end.sql.n1ql"
                }
            },
            "name": "string.quoted.single.sql.n1ql",
            "patterns": [{
                "match": "''",
                "name": "constant.character.escape.singlequote.sql.n1ql"
            }]
        },
        "comment": {
            "patterns": [{
                "match": "--.*",
                "name": "comment.line.double-dash.sql.n1ql"
            }, {
                "begin": "/\\*",
                "end": "\\*/",
                "name": "comment.block.sql.n1ql"
            }]
        }
    }
}